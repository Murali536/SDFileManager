<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/tbr_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/tbr_ll_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center" >

            <ImageView
                android:id="@+id/theme_1"
                android:layout_width="@dimen/theme_color_width"
                android:layout_height="@dimen/theme_color_height"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tbr_ll_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center" >

            <ImageView
                android:id="@+id/theme_2"
                android:layout_width="@dimen/theme_color_width"
                android:layout_height="@dimen/theme_color_height"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tbr_ll_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center" >

            <ImageView
                android:id="@+id/theme_3"
                android:layout_width="@dimen/theme_color_width"
                android:layout_height="@dimen/theme_color_height"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tbr_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/tbr_ll_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center" >

            <ImageView
                android:id="@+id/theme_4"
                android:layout_width="@dimen/theme_color_width"
                android:layout_height="@dimen/theme_color_height"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tbr_ll_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center" >

            <ImageView
                android:id="@+id/theme_5"
                android:layout_width="@dimen/theme_color_width"
                android:layout_height="@dimen/theme_color_height"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tbr_ll_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center" >

            <ImageView
                android:id="@+id/theme_6"
                android:layout_width="@dimen/theme_color_width"
                android:layout_height="@dimen/theme_color_height"
                android:background="@drawable/circle_bg"
                android:scaleType="centerInside" />
        </LinearLayout>
    </TableRow>

</TableLayout>