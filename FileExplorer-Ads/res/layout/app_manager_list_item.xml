<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:layout_gravity="center_vertical"
    android:background="@drawable/list_item_bg"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/app_manager_app_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="70dip" >

        <CheckedTextView
            android:id="@+id/app_manager_app_name"
            android:layout_width="fill_parent"
            android:layout_height="70dip"
            android:layout_toRightOf="@+id/app_manager_app_icon"
            android:checkMark="@android:drawable/checkbox_off_background"
            android:ellipsize="marquee"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:orientation="vertical"
            android:paddingBottom="15dip"
            android:paddingLeft="62dip"
            android:paddingRight="10dip"
            android:scrollHorizontally="true"
            android:textColor="@color/app_manager_item_name_text_color"
            android:textSize="@dimen/side_pane_items" />

        <TextView
            android:id="@+id/app_manager_app_size"
            android:layout_width="wrap_content"
            android:layout_height="28dip"
            android:layout_below="@+id/app_manager_app_name"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@+id/app_manager_app_icon"
            android:gravity="top"
            android:layout_marginBottom="5dp"
            android:paddingLeft="62dip"
            android:textColor="@color/app_manager_item_name_text_color"
            android:textSize="14sp" />
    </FrameLayout>

</RelativeLayout>